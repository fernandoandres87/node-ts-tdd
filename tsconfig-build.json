{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "ES2019",
      "esModuleInterop": true,
      "allowJs": true,
      "strict": false,
      "sourceMap": true,
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }